<%- include('./partials/head',{style:"edicYProd", title:"Editar productos"}) %>

    <body>
        <%- include('./partials/header') %>
            <%- include('./partials/menu_arriba') %>
                <main class="lis">
                    <div class="conten">
                        <a href="register">
                            <h2>Subir Producto</h2>
                        </a>
                        <section class="formulario">
                            <form class="form" action="/createProducts" method="POST" enctype="multipart/form-data">
                                <ul class="formUl">
                                    <div>
                                        <label for="nya">nombre</label>
                                        <li class="form_input"><input id="nya" type="text" name="nya" class="form-control" value="<% if(tipeof validaciones!= 'undefined') { %><%= valores.nya %><% } %>">
                                        </li>
                                    </div>
                                    <div>
                                        <label for="descripcion">descripcion</label>
                                        <li class="form_input"><input id="descripcion" type="text" name="descripcion" class="form-control" value="<% if(tipeof validaciones!= 'undefined') { %><%= valores.descripcion %><% } %>">
                                        </li>

                                    </div>
                                    <div>
                                        <label for="image">image</label>
                                        <li class="form_input"><input id="image" type="file" name="image" class="form-control" value="<% if(tipeof validaciones!= 'undefined') { %><%= valores.image %><% } %>"></li>
                                    </div>
                                    <div>
                                        <label for="precio">precio</label>
                                        <li class="form_input"><input id="precio" type="number" name="precio" class="form-control" value="<% if(tipeof validaciones!= 'undefined') { %><%= valores.precio %><% } %>">
                                        </li>
                                    </div>
                                    <p>elige una opcion</p>
                                    <div class="menuSelect">
                                        <input id="ham" type="radio" name="categoria" />
                                        <label for="ham">
                                            <p>menu hamburguesa</p>
                                        </label>
                                        <input id="veg" type="radio" name="categoria" />
                                        <label for="veg">
                                            <p>menu vegano</p>
                                        </label>
                                    </div>
                                </ul>

                                <div class="divBtn">
                                    <button type="submit" class="button">
                                        Subir producto
                                    </button>
                                    <button class="button">
                                        Eliminar producto
                                    </button>
                                </div>
                            </form>
                            <% if(tipeof validaciones!= 'undefined') { %>
                                <%validaciones.forEach((validacion)=>{%>
                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        <strong><%=validacion.msg %></strong>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                      </div>
                                    <% }) %>
                            <% } %>
                        </section>
                    </div>

                </main>
    </body>

    <%- include('./partials/footer') %>



        </html>