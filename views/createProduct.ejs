<%- include('./partials/head',{style:"edicYProd", title:"Editar productos"}) %>

    <body>
        <%- include('./partials/header') %>
            <%- include('./partials/menu_arriba') %>
                <main class="lis">
                    <div class="conten">
                        <a href="register">
                            <h2>Subir Producto</h2>
                        </a>
                        <section class="formulario">
                            <form class="form" action="/products/create" method="POST" enctype="multipart/form-data">
                                <ul class="formUl">
                                    <div>
                                        <label for="nya">nombre</label>
                                        <li class="form_input"><input id="nya" type="text" name="nombre"
                                                class="form-control">
                                            <% if (locals.errors && locals.errors.nombre) { %>
                                                <p class="error">
                                                    <%= locals.errors.nombre.msg %>
                                                </p>
                                                <%}%>

                                        </li>
                                    </div>
                                    <div>
                                        <label for="descripcion">descripcion</label>
                                        <li class="form_input"><input id="descripcion" type="text" name="descripcion"
                                                class="form-control" value="">
                                            <% if (locals.errors && locals.errors.descripcion) { %>
                                                <p class="error">
                                                    <%= locals.errors.descripcion.msg %>
                                                </p>
                                                <%}%>
                                        </li>

                                    </div>
                                    <div>
                                        <label for="image">image</label>
                                        <li class="form_input"><input id="image" type="file" name="filename"
                                                class="form-control">
                                            <% if (locals.errors && locals.errors.image) { %>
                                                <p class="error">
                                                    <%= locals.errors.image.msg %>
                                                </p>
                                                <%}%>
                                        </li>
                                    </div>
                                    <div>
                                        <label for="precio">precio</label>
                                        <li class="form_input"><input id="precio" type="text" name="precio"
                                                class="form-control">
                                            <% if (locals.errors && locals.errors.precio) { %>
                                                <p class="error">
                                                    <%= locals.errors.precio.msg %>
                                                </p>
                                                <%}%>
                                        </li>
                                    </div>
                                    <p>elige una opcion</p>
                                    <label for="categoria">Categor√≠a:</label>
                                    <select id="categoria" name="categoria">
                                        <option value="1">Tradicional</option>
                                        <option value="2">Vegana</option>
                                    </select>
                                </ul>

                                <div class="divBtn">
                                    <button type="submit" class="button">
                                        Subir producto
                                    </button>
                                    <button class="button">
                                        Limpiar Campos
                                    </button>
                                </div>
                            </form>
                        </section>
                    </div>

                </main>
    </body>

    <%- include('./partials/footer') %>



        </html>